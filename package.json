    "react-router": "^2.4.1",
    "superagent": "^1.2.0"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "gulp": "^3.9.1",
    "gulp-react": "^3.1.0",
    "gulp-sourcemaps": "^1.5.2",
    "gulp-uglify": "^1.5.2",
    "gulp-util": "^3.0.7",
    "lodash.assign": "^4.0.2",
    "nodemon": "^1.8.1",
